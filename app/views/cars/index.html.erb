<div class="page-header">
  <%= link_to new_car_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Car
  <% end %>
  <h1>See our selection of cars below</h1>
</div>

<%= will_paginate @cars, renderer: BootstrapPagination::Rails %>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Model</th>
      <th>Make</th>
      <th>Year</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @cars) do |car| %>
      <td><%= car.model %></td>
      <td><%= car.make %></td>
      <td><%= car.year %></td>
      <td><%= number_to_currency(car.price) %></td>
      <% if current_user %>
        <td><%= link_to 'Claim', claim_car_path(car) %></td>
        <td><%= link_to 'Unclaim', unclaim_car_path(car) %></td>
    <% end %>
      <td><%= link_to 'Show', car %></td>
      <td><%= link_to 'Edit', edit_car_path(car) %></td>
      <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </tbody>
  </table>
</div>
